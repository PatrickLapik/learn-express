{% extends "partials/layout.njk" %}
{% block title %} Home {% endblock %}
{% block content %}

<h1>neeger.ee</h1>
<form action="/answer" method="POST">
  <input type="text" placeholder="Name" name="name" />
  <input type="number" placeholder="Age" name="age" />
  <input type="submit" />
</form>
<ul>
  {% for i in range(0, 10) %} {% if i % 2 == 0 %}
  <li>{{ i }} is even</li>
  {% else %}
  <li>{{ i }} is odd</li>
  {% endif %} {% endfor %}
</ul>

{% endblock %}
